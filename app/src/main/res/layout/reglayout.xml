<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:text="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingLeft="10dp">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:autoText="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:gravity="center|fill_horizontal"
                    android:text="@string/surnameLabel" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:autoText="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:gravity="center|fill_horizontal"
                    android:text="@string/nameLabel"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:autoText="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:gravity="center|fill_horizontal"
                    android:text="@string/thirdNameLabel" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:autoText="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:gravity="center|fill_horizontal"
                    android:text="@string/phoneNumbe" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:autoText="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:gravity="center|fill_horizontal"
                    android:text="@string/emailLabel" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:autoText="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:gravity="center|fill_horizontal"
                    android:text="@string/passwordLabel"
                    tools:text="@string/passwordLabel" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="50dp"
                    android:autoText="false"
                    android:clickable="false"
                    android:contentDescription="@string/password2LabelHint"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:gravity="center|fill_horizontal"
                    android:text="Повторите пароль"
                    tools:text="@string/password2Label" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:paddingLeft="2dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:height="30dp"
                    android:ems="10"
                    android:hint="@string/surnameLabelHint"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/surname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:height="25dp"
                    android:ems="10"
                    android:hint="@string/nameLabelHint"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/thirdname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:height="25dp"
                    android:ems="10"
                    android:hint="@string/thirdNameLabelHint"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:height="25dp"
                    android:ems="10"
                    android:hint="@string/phoneNumberHint"
                    android:inputType="phone"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:height="25dp"
                    android:ems="10"
                    android:hint="@string/emailLabelHint"
                    android:inputType="textEmailAddress"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:height="25dp"
                    android:ems="10"
                    android:hint="@string/passwordLabelHint"
                    android:inputType="textPassword"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/password2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:height="25dp"
                    android:ems="10"
                    android:hint="@string/password2LabelHint"
                    android:inputType="textPassword"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/button11"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="32dp"
                android:onClick="onClickBackToMain"
                android:text="Отмена"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/button14"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="4dp"
                android:onClick="onClickConfirmReg"
                android:text="@string/submitBtn"
                app:layout_constraintBottom_toTopOf="@+id/button11"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/errorLabel"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="483dp"
                android:layout_marginEnd="84dp"
                android:layout_marginBottom="48dp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/button14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</LinearLayout>