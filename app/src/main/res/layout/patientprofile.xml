<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="684dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/doctorAppointment"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:onClick="onClickDoctorAppointment"
            android:text="@string/makeAppointment" />

        <Button
            android:id="@+id/button2"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:onClick="obClickPatientOrders"
            android:text="@string/myAppointments" />

        <Button
            android:id="@+id/button3"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="@string/mySettings" />

        <Button
            android:id="@+id/button4"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:onClick="onClickBackToMain"
            android:text="@string/cancel" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>